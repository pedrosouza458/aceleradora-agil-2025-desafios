{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "commonjs",                               
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                          
    "noUnusedLocals": true,                        
    "noUnusedParameters": true,                
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]  
    }                                
  }
}
